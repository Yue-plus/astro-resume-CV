---
interface Porps {
    // 公司
    company: string;
    // 岗位
    position: string;
    // 时间
    time: string;
}

const { company, position, time } = Astro.props;
---

<div>
    <div class="mt-2 inline-flex items-end gap-4">
        <h3 class="font-semibold text-3xl">{company}</h3>
        <p class="text-2xl font-medium text-gray-800">{position}</p>
        <p class="text-2xl font-medium text-gray-500">{time}</p>
    </div>
    <slot />
</div>
