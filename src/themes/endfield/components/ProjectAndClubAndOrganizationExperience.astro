---
import Title from "../widgets/Title.astro";

const list: {
    name: string;
    link: string | null;
    timeRange: string;
    role: string;
    description: string;
}[] = [
    {
        name: "hexo-theme-arknights",
        link: "https://github.com/Yue-plus/hexo-theme-arknights",
        timeRange: "2020.03 - 至今",
        role: "开发",
        description: `
            设计与开发的 Hexo 高扩展性主题，覆盖前端 UI、主题系统、插件适配与工程化构建。
            实现完整的博客主题生态，包括多评论系统集成（Valine/Waline/Gitalk/Giscus/Artalk）、
            Mermaid 图表、MathJax 数学公式渲染、字数统计、加密、全文搜索等模块。
            项目长期维护、文档完善，已被众多开发者使用，在 GitHub 获得 820+ star，为 Hexo 社区提供高质量主题解决方案。
        `,
    },
    {
        name: "悦域江职",
        link: "https://jvtc.yue.zone/",
        timeRange: "2022.09 - 至今",
        role: "开发",
        description: `
            使用 Docusaurus 框架搭建基于 React + Markdown + Katex 技术栈实现内容模块化开发；
            结合 GitHub Actions 搭建自动化 CI/CD 流程；
            网站内容聚焦软件开发技术、课程核心知识整合及专升本考试专题，帮助校内外同学们系统化提升技术能力与学习效率。
        `,
    },
    {
        name: "Kotlin 语言中文站",
        link: "https://www.kotlincn.net/",
        timeRange: "2019.12 - 2021.01",
        role: "翻译",
        description:
            // https://github.com/hltj/kotlin-web-site-cn/commits/master/?author=Yue-plus
            `参与 Kotlin 中文站早期建设，负责翻译并维护网站主框架、语言指南、多平台程序设计、集合操作、Kotlin/JS IR、编译器选项、
            面向 Python 开发者的 Kotlin 教程及社区相关文档，助力中文开发者零门槛拥抱 Kotlin 生态，推动国内 Kotlin 社区繁荣发展。`,
    },
    {
        name: "游戏服务器",
        link: null,
        timeRange: "2014.05 - 至今",
        role: "运维",
        description: `
            熟练运用 SteamCMD、Docker 及 Linux systemd 等工具，长期独立运维多款游戏服务器
            （Minecraft、Terraria、Factorio、Unturned、CS:GO、饥荒），
            实现一键开服、自动备份与跨平台部署，保障 7×24 小时稳定运行。
        `,
    },
];

// TODO: 显示 GitHub 仓库 star 数量
---

<div>
    <Title title="项目 / 社团 / 组织经历" />
    {
        list.map(({ name, link, timeRange, role, description }) => (
            <section class="my-1 break-inside-avoid">
                <h3 class="text-3xl font-semibold">
                    <div class="w-[52%] inline-block">
                        {link ? (
                            <a
                                href={link}
                                target="_blank"
                                class="underline decoration-4 decoration-end-yellow hover:decoration-end-green duration-300"
                            >
                                {name}
                            </a>
                        ) : (
                            name
                        )}
                    </div>
                    <div class="w-[12%] inline-block text-2xl font-bold">
                        {role}
                    </div>
                    <span class="text-xl font-normal">{timeRange}</span>
                </h3>
                <p class="mt-1">{description}</p>
            </section>
        ))
    }
</div>
