    { Icon: ReactIcon, text: "React" },
    { Icon: VueIcon, text: "Vue" },
    { Icon: AngularIcon, text: "Angular" },
    { Icon: SolidjsIcon, text: "Solid.js" },
];

// 运维
const devops: BadgeProps[] = [
    { Icon: LinuxIcon, text: "Linux" },
    { Icon: WindowsIcon, text: "Windows Server" },
    { Icon: DockerIcon, text: "Docker" },
    { Icon: null, text: "企业组网" },
    { Icon: null, text: "CI/CD" },
    { Icon: null, text: "DevOps" },
];

// 业务与设计
const businessAndDesign: BadgeProps[] = [
    { Icon: UMLIcon, text: "UML" },
    // { Icon: null, text: "Word" },
    // { Icon: null, text: "Excel" },
    // { Icon: null, text: "PowerPoint" },
    { Icon: null, text: "Visio" },
    { Icon: null, text: "Adobe [ Ps | Ai | Lr | Au | Pr | Ae | Id ]" },
    { Icon: null, text: "AxureRP" },
    { Icon: null, text: "UI/UX" },
];

// 其他技能
const otherSkills: BadgeProps[] = [
    { Icon: null, text: "AutoCAD" },
    { Icon: null, text: "Revit" },
    { Icon: null, text: "Rhino" },
    { Icon: null, text: "UG/NX" },
    { Icon: null, text: "日语" },
    { Icon: null, text: "英语" },
    { Icon: null, text: "机动车驾驶证 C1" },
];

const skills = [
    { title: "编程语言", list: programmingLanguages },
    { title: "数据库", list: databases },
    { title: "开发框架", list: frameworks },
    { title: "运维", list: devops },
    { title: "业务 / 设计", list: businessAndDesign },
    { title: "其他", list: otherSkills },
];
---

<div class="relative">
    <Title title="专业技能" />
    <ul>
        {
            skills.map(({ title, list }, index, array) => (
                <>
                    <li class="flex gap-2 items-center">
                        <span class="w-28 pl-1 font-bold text-xl shrink-0">
                            {title}
                        </span>
                        <div class="inline-flex flex-wrap gap-1">
                            {list.map(({ Icon, text }) => (
                                <Badge {...{ Icon, text }} />
                            ))}
                        </div>
                    </li>
                    {index !== array.length - 1 && (
                        <hr class="w-full h-px my-1 border-0 bg-linear-to-r from-gray-400 to-transparent" />
                    )}
                </>
            ))
        }
    </ul>
</div>
