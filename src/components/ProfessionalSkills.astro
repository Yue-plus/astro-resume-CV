import Badge, { type BadgeProps } from "./widgets/Badge.astro";
import Title from "./widgets/Title.astro";

// 编程语言
const programmingLanguages: BadgeProps[] = [
    { Icon: KotlinIcon, text: "Kotlin" },
    { Icon: JavaIcon, text: "Java" },
