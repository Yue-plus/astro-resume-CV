    { Icon: SupabaseIcon, text: "Supabase" },
    { Icon: PostgreSQLIcon, text: "PostgreSQL" },
    { Icon: MariaDBIcon, text: "MariaDB" },
    { Icon: MySQLIcon, text: "MySQL" },
    { Icon: null, text: "H2" },
    { Icon: SQLiteIcon, text: "SQLite" },
    { Icon: InfluxDBIcon, text: "InfluxDB" },
    { Icon: RedisIcon, text: "Redis" },
    { Icon: MongoDBIcon, text: "MongoDB" },
    { Icon: Neo4jIcon, text: "Neo4j" },
    { Icon: RabbitMQIcon, text: "RabbitMQ" },
