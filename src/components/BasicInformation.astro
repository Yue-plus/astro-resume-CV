---
import {
    CAN_ADD_WEIXIN_FRIEND_BY_PHONE,
    EMAIL,
    INTRODUCTION,
    NAME,
    PHONE,
    QQ_ID,
    WEIXIN_ID,
} from "../CV";
---

<div>
    <div class="inline-flex gap-8 items-end">
        <h1 class="text-6xl font-bold">
            <span class="text-4xl text-gray-500 select-none">[</span>
            {NAME}
            <span class="text-4xl text-gray-500 select-none">]</span>
        </h1>
        <div>
            <p>
                <span>手机：{PHONE}</span>
                <sub>{CAN_ADD_WEIXIN_FRIEND_BY_PHONE && "（微信同号）"}</sub>
            </p>
            <p>邮箱：{EMAIL}</p>
            <p>QQ：{QQ_ID}</p>
            {!CAN_ADD_WEIXIN_FRIEND_BY_PHONE && <p>微信：{WEIXIN_ID}</p>}
        </div>
    </div>
    <hr
        class="h-1 mt-4 mb-3 border-0"
        style="background-image: linear-gradient(90deg, #ff00f0 20%, #fffa00 0, #fffa00 46%, #00ffa2 0);"
    />
    <div>{INTRODUCTION}</div>
</div>
